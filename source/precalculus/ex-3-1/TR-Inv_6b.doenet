<problem newnamespace>
   <setup>
     <!-- <select name="a">-1 -sqrt(3)/2 -sqrt(2)/2 -1/2 0 1/2 sqrt(3)/2 sqrt(2)/2 1</select> -->
    <select name="a">0 1/2 sqrt(3)/2 sqrt(2)/2 1</select> <math
      name="sol"
      simplify
    >arccos($a) (180/pi)</math> <number name="solN">$sol</number> <number
      name="zeroF"
      fixed
    >0</number> <boolean name="notInRangeBool">
       cos($userAns *pi/180) = $a and $userAns != $solN
    </boolean>
  </setup>

  <!--testing--> <!-- <p>a = $a</p>
<p>sol = $sol</p>
<p>solN = $solN</p> --> <!--testing-->

  <p>
    <m>\cos^{-1} \left($a \right) = </m> <mathInput name="userAns" /><m>
       ^{\circ}
    </m> <answer name="ans1" allowedErrorInNumbers="0.01" allowedErrorIsAbsolute>
      <award name="correct">
         <when>$solN = $userAns</when>
      </award> <award name="notInRange" credit="0">
         <when>$notInRangeBool</when>
      </award> </answer>
  </p>

  <!--*********************************************
            Feedbacks
**********************************************-->
  <setup>
     <select name="correctFeedback" type="text">
       <option>Awesome!</option> <option>Great job!</option> <option>
         Fantastic!
      </option> <option>Nice work!</option> <option>Amazing!</option> <option>
         Excellent!
      </option> <option>Right on!</option> <option>Perfect!</option>
    </select>
  </setup>
  <feedback condition="$correct and $ans1.creditAchieved = 1">
     $correctFeedback
  </feedback>

  <feedback condition="$correct2 and $ans1.creditAchieved = 1">
     $correctFeedback
  </feedback>

  <feedback condition="$notInRange">
    <p>
      Recall that the range of the function <m>y = \cos^{-1}(x)</m> is
      <math>[0, pi]</math> (or, in degrees, <m>[0^{\circ}, 180^{\circ}]</m>).
    </p>
    <graph size="small" xmin="-2" xmax="2" ymin="-pi/2" ymax="3pi/2">
      <function>arccos(x)</function>
      <line fixed styleNumber="6">y = 0</line>
      <line fixed styleNumber="6">y = pi</line>
    </graph>
  </feedback>

  <!--*********************************************
            Unit Circle Widget
**********************************************-->

  <!--*********************************************
            Solution
**********************************************-->
  <solution><p><m>$solN^{\circ}</m></p></solution>


</problem>


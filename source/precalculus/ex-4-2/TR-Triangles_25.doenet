<problem newNamespace>
   <setup>
     <selectFromSequence name="A" from="40" to="125" /> <selectFromSequence
      name="b"
      from="4"
      to="15"
    /> <selectFromSequence name="c" from="4" to="15" /> <math name="a" simplify>
      sqrt($b^2 + $c^2 - 2$b $c cos($A pi/180))
    </math> <math name="B" simplify>
       arccos(($a^2 + $c^2 - $b^2)/(2 $a $c))(180/pi)
    </math> <math name="C" simplify>180 - $A - $B</math> <number name="an">
      $a
    </number> <number name="Bn">$B</number> <number name="Cn">$C</number> <number
      name="xmin"
    >min(-3, $pB.x - 3)</number> <number name="xmax">
      max($b + 3, $pB.x + 3)
    </number>
  </setup>

  <!--testing--> <!-- <p>A = $A</p>
<p>B = $B</p>
<p>C = $C</p>
<p>a = $a</p>
<p>b = $b</p>
<p>c = $c</p>
<p>an = $an</p>
<p>Bn = $Bn</p>
<p>Cn = $Cn</p> -->
  <!--testing-->

  <p>
    Find the missing parts of the triangle. Round lengths to the nearest 0.01,
    and angles to the nearest 0.1 degrees.
  </p>

  <p>In the triangle below:</p>
  <md>
     <mrow>A \amp= $A^{\circ}</mrow> <mrow>b \amp= $b</mrow> <mrow>
      c \amp= $c
    </mrow>
  </md>

  <graph
    name="g1"
    size="medium"
    fixAxes
    displayXAxis="false"
    displayYAxis="false"
    xmin="$xmin"
    xmax="$xmax"
    ymin="-3"
    ymax="$pB.y + 3"
    identicalAxisScales
  >
    <point name="pA" fixed labelPosition="left" styleNumber="5">
      (0,0) <label><m>A</m></label>
    </point>
    <point name="pB" fixed styleNumber="5" labelPosition="left">
      ($c cos($A pi/180), $c sin($A pi/180)) <label><m>B</m></label>
    </point>
    <point name="pC" fixed styleNumber="5">
      ($b,0) <label><m>C</m></label>
    </point>
    <lineSegment name="aSeg" styleNumber="2" endpoints="$pB $pC" />
    <lineSegment name="bSeg" styleNumber="3" endpoints="$pA $pC" />
    <lineSegment name="cSeg" styleNumber="4" endpoints="$pA $pB" />

    <triangle name="triABC" vertices="$pA $pC $pB" fixed hide />

    <angle name="angleA" through="$pB $pA $pC" radius="0.1 $b" styleNumber="2">
       <label><m>$angleA.degrees</m></label>
    </angle>
    <angle
      name="angleB"
      through="$pA $pB $pC"
      radius="0.1 $b"
      styleNumber="3"
      emphasizeRightAngle="false"
    />
    <angle
      name="angleC"
      through="$pA $pC $pB"
      radius="0.1 $b"
      styleNumber="4"
      emphasizeRightAngle="false"
    />

    <textInput name="Cinput" anchor="($pC.x, $pC.y - 1)" width="34px">
       <label><m>C = </m></label>
    </textInput>

    <textInput name="Binput" anchor="($pB.x + 0.2$b, $pB.y)" width="34px">
       <label><m>B = </m></label>
    </textInput>

    <textInput
      name="ainput"
      anchor="(($pB.x + $pC.x)/2 + 0.25$b, $pB.y/2)"
      width="30px"
    > <label><m>a = </m></label> </textInput>
    <label name="blabel" anchor="($pC.x/2, -1)"><m>b = $b</m></label>

    <label name="clabel" anchor="($pB.x/2 - 0.18$b, $pB.y/2)">
      <m>c = $c</m>
    </label>
  </graph>

  <p><m>a = </m><mathInput name="usera" bindValueTo="$ainput" /></p>
  <p>
    <m>B = </m><mathInput name="userB" bindValueTo="$Binput" /><m>^{\circ}</m>
  </p>
  <p>
    <m>C = </m><mathInput name="userC" bindValueTo="$Cinput" /><m>^{\circ}</m>
  </p>

  <setup>
     <boolean
      name="angleBCorrect"
      allowedErrorInNumbers="0.1"
      allowedErrorIsAbsolute
    >$userB = $B</boolean> <boolean
      name="angleCCorrect"
      allowedErrorInNumbers="0.1"
      allowedErrorIsAbsolute
    >$userC = $C</boolean> <boolean
      name="sideCorrect"
      allowedErrorInNumbers="0.01"
      allowedErrorIsAbsolute
    >$usera = $a</boolean>
  </setup>

  <answer name="ans1">
     <award name="correct" matchPartial>
       <when>$angleBCorrect and $angleCCorrect and $sideCorrect</when>
    </award>
  </answer>

  <!--*********************************************
            Feedbacks
**********************************************-->
  <setup>
     <select name="correctFeedback" type="text">
       <option>Awesome!</option> <option>Great job!</option> <option>
        Fantastic!
      </option> <option>Nice work!</option> <option>Amazing!</option> <option>
        Excellent!
      </option> <option>Right on!</option> <option>Perfect!</option>
    </select>
  </setup>
  <feedback condition="$correct and $ans1.creditAchieved = 1">
    $correctFeedback
  </feedback>

  <feedback condition="$rounding and $ans1.creditAchieved != 1">
    Try carrying more decimal places in your computation. It looks like you are
    close but you made a rounding error!
  </feedback>

  <!--*********************************************
            Hint
**********************************************-->

  <!--*********************************************
            Solution
**********************************************-->
  <solution>
    <p><m>a = $an</m></p>
    <p><m>B = $Bn ^{\circ}</m></p>
    <p><m>C = $Cn ^{\circ}</m></p>
  </solution>
</problem>


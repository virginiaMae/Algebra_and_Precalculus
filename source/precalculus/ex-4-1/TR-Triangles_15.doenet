<problem newNamespace>
   <setup>
     <selectFromSequence name="A" from="20" to="59" /> <selectFromSequence
      name="B"
      from="40"
      to="95"
    /> <selectFromSequence name="a" from="4" to="15" /> <math name="C" simplify>
      180 - $A - $B
    </math> <math name="b" simplify>$a sin($B pi/180)/(sin($A pi/180))</math> <math
      name="c"
      simplify
    >$a sin($C pi/180)/(sin($A pi/180))</math> <number name="Cn">$C</number> <number
      name="bn"
    >$b</number> <number name="cn">$c</number>
  </setup>

  <!--testing--> <!-- <p>A = $A</p>
<p>B = $B</p>
<p>C = $C</p>
<p>a = $a</p>
<p>b = $b</p>
<p>c = $c</p>
<p>bn = $bn</p>
<p>cn = $cn</p> -->
  <!--testing-->

  <p>
    Find the missing parts of the triangle. Round lengths to the nearest 0.01.
  </p>

  <p>In the triangle below:</p>
  <md>
     <mrow>A \amp= $A^{\circ}</mrow> <mrow>B \amp= $B^{\circ}</mrow> <mrow>
      a \amp= $a
    </mrow>
  </md>

  <graph
    name="g1"
    size="medium"
    fixAxes
    displayXAxis="false"
    displayYAxis="false"
    xmin="-3"
    xmax="$b + 3"
    ymin="-3"
    ymax="$pB.y + 3"
    identicalAxisScales
  >
    <point name="pA" fixed labelPosition="left" styleNumber="5">
      (0,0) <label><m>A</m></label>
    </point>
    <point name="pB" fixed styleNumber="5">
      ($c cos($A pi/180), $c sin($A pi/180)) <label><m>B</m></label>
    </point>
    <point name="pC" fixed styleNumber="5">
      ($b,0) <label><m>C</m></label>
    </point>
    <lineSegment name="aSeg" styleNumber="2" endpoints="$pB $pC" />
    <lineSegment name="bSeg" styleNumber="3" endpoints="$pA $pC" />
    <lineSegment name="cSeg" styleNumber="4" endpoints="$pA $pB" />

    <triangle name="triABC" vertices="$pA $pC $pB" fixed hide />

    <angle name="angleA" through="$pB $pA $pC" radius="0.1 $b" styleNumber="2">
       <label><m>$angleA.degrees</m></label>
    </angle>
    <angle
      name="angleB"
      through="$pA $pB $pC"
      radius="0.1 $b"
      styleNumber="3"
      emphasizeRightAngle="false"
    > <label><m>$angleB.degrees</m></label> </angle>
    <angle
      name="angleC"
      through="$pA $pC $pB"
      radius="0.1 $b"
      styleNumber="4"
      emphasizeRightAngle="false"
    />

    <textInput name="Cinput" anchor="($pC.x, $pC.y - 1)" width="25px">
       <label><m>C = </m></label>
    </textInput>
    <label name="aLabel" anchor="(($pB.x + $pC.x)/2 + 0.15$b, $pB.y/2)">
      <m>a = $a</m>
    </label>
    <textInput name="binput" anchor="($pC.x/2, -1)" width="30px">
       <label><m>b = </m></label>
    </textInput>
    <textInput name="cinput" anchor="($pB.x/2 - 0.18$b, $pB.y/2)" width="30px">
       <label><m>c = </m></label>
    </textInput>
  </graph>

  <p>
    <m>C = </m><mathInput name="userC" bindValueTo="$Cinput" /><m>^{\circ}</m>
  </p>
  <p><m>b = </m><mathInput name="userb" bindValueTo="$binput" /></p>
  <p><m>c = </m><mathInput name="userc" bindValueTo="$cinput" /></p>

  <answer name="ans1">
     <award
      name="correct"
      allowedErrorInNumbers="0.01"
      allowedErrorIsAbsolute
      matchPartial
      matchByExactPositions
    > <when> ($userC, $userb, $userc) = ($C, $b, $c) </when> </award> <award
      name="rounding"
      allowedErrorInNumbers="0.1"
      allowedErrorIsAbsolute
      matchByExactPositions
      matchPartial
      credit="0.5"
    > <when> ($userC, $userb, $userc) = ($C, $b, $c) </when> </award>
  </answer>

  <!--*********************************************
            Feedbacks
**********************************************-->
  <setup>
     <select name="correctFeedback" type="text">
       <option>Awesome!</option> <option>Great job!</option> <option>
        Fantastic!
      </option> <option>Nice work!</option> <option>Amazing!</option> <option>
        Excellent!
      </option> <option>Right on!</option> <option>Perfect!</option>
    </select>
  </setup>
  <feedback condition="$correct and $ans1.creditAchieved = 1">
    $correctFeedback
  </feedback>

  <feedback condition="$rounding and $ans1.creditAchieved != 1">
    Try carrying more decimal places in your computation. It looks like you are
    close but you made a rounding error!
  </feedback>

  <!--*********************************************
            Hint
**********************************************-->

  <!--*********************************************
            Solution
**********************************************-->
  <solution>
    <p><m>C = $C^{\circ}</m></p>
    <p><m>b = $bn</m></p>
    <p><m>c = $cn</m></p>
  </solution>
</problem>

